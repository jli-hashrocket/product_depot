<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, size: 40 %>
    <%= f.input :address, as: :text, input_html: { rows: 3, cols: 40 }%>
    <%= f.input :email, size: 40 %>
    <%= f.input :pay_type, collection: Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
